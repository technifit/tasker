{
  "name": "@technifit/web",
  "version": "0.0.0",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "clean": "rm -rf .turbo node_modules coverage playwright-report test-results .cache build types/remix-routes.d.ts",
    "dev": "vite --host",
    "docker:build": "cd ../.. && docker build -f apps/web/Dockerfile -t tasker-web .",
    "docker:run": "cd ../.. && docker run --rm -d -p 8080:8080 --env-file .env tasker-web",
    "format:fix": "prettier . --write --cache --cache-location='node_modules/.cache/.prettiercache' --log-level=warn",
    "format": "prettier . --check --cache --cache-location='node_modules/.cache/.prettiercache'",
    "lint:fix": "eslint . --fix --cache --cache-location 'node_modules/.cache/.eslintcache' --max-warnings 0",
    "lint": "eslint . --cache --cache-location 'node_modules/.cache/.eslintcache' --max-warnings 0",
    "start:docker": "run-s docker:*",
    "start": "node ./build/server/index.js",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest",
    "test": "vitest --run",
    "test:integration": "playwright test",
    "test:integration-ui": "playwright test --ui",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@hookform/resolvers": "3.9.1",
    "@remix-run/express": "2.15.0",
    "@remix-run/node": "2.15.0",
    "@remix-run/react": "2.15.0",
    "@sentry/remix": "8.42.0",
    "@technifit/authentication": "workspace:*",
    "@technifit/environment": "workspace:*",
    "@technifit/id": "workspace:*",
    "@technifit/jwt": "workspace:*",
    "@technifit/middleware": "workspace:*",
    "@technifit/ui": "workspace:*",
    "dotenv": "16.4.7",
    "is-ip": "5.0.1",
    "isbot": "5.1.17",
    "lodash": "4.17.21",
    "pretty-cache-header": "1.0.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-hook-form": "7.53.2",
    "remix-create-express-app": "0.4.5",
    "remix-hook-form": "5.1.1",
    "remix-params-helper": "0.5.1",
    "remix-routes": "1.7.5",
    "remix-themes": "1.5.1",
    "remix-utils": "7.7.0",
    "typescript-slugify": "1.0.1",
    "vite-env-only": "3.0.3",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@codecov/vite-plugin": "1.5.1",
    "@playwright/test": "1.49.0",
    "@remix-run/dev": "2.15.0",
    "@sentry/vite-plugin": "2.22.6",
    "@technifit/eslint-config": "workspace:*",
    "@technifit/tailwind-config": "workspace:*",
    "@technifit/tsconfig": "workspace:*",
    "@types/lodash": "4.17.13",
    "@types/node": "22.10.1",
    "@types/react": "18.3.13",
    "@types/react-dom": "18.3.1",
    "@vitest/coverage-v8": "2.1.8",
    "autoprefixer": "10.4.20",
    "dotenv-cli": "7.4.4",
    "npm-run-all2": "7.0.1",
    "postcss": "8.4.49",
    "remix-development-tools": "4.7.7",
    "remix-express-dev-server": "0.4.4",
    "remix-flat-routes": "0.6.5",
    "tailwindcss": "3.4.16",
    "typescript": "5.7.2",
    "typescript-remix-routes-plugin": "1.0.1",
    "vite": "6.0.2",
    "vite-tsconfig-paths": "5.1.3",
    "vitest": "2.1.8"
  }
}
