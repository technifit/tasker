{
  "name": "@technifit/web",
  "version": "0.0.0",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "clean": "rm -rf .turbo node_modules coverage playwright-report test-results .cache build types/remix-routes.d.ts",
    "dev": "vite --host",
    "docker:build": "cd ../.. && docker build -f apps/web/Dockerfile -t tasker-web .",
    "docker:run": "cd ../.. && docker run --rm -d -p 8080:8080 --env-file .env tasker-web",
    "format:fix": "prettier . --write --cache --cache-location='node_modules/.cache/.prettiercache' --log-level=warn",
    "format": "prettier . --check --cache --cache-location='node_modules/.cache/.prettiercache'",
    "lint:fix": "eslint . --fix --cache --cache-location 'node_modules/.cache/.eslintcache' --max-warnings 0",
    "lint": "eslint . --cache --cache-location 'node_modules/.cache/.eslintcache' --max-warnings 0",
    "start:docker": "run-s docker:*",
    "start": "node ./build/server/index.js",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest",
    "test": "vitest --run",
    "test:integration": "playwright test",
    "test:integration-ui": "playwright test --ui",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@clerk/remix": "4.0.2",
    "@hono/node-server": "1.11.1",
    "@hookform/resolvers": "3.3.4",
    "@remix-run/express": "2.9.1",
    "@remix-run/node": "2.9.1",
    "@remix-run/react": "2.9.1",
    "@technifit/ui": "*",
    "dotenv": "16.4.5",
    "hono": "4.2.9",
    "isbot": "5.1.5",
    "lodash": "4.17.21",
    "pretty-cache-header": "1.0.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-hook-form": "7.51.3",
    "remix-hono": "0.0.16",
    "remix-hook-form": "4.3.1",
    "remix-params-helper": "0.5.1",
    "remix-routes": "1.7.3",
    "remix-utils": "7.6.0",
    "zod": "3.23.4"
  },
  "devDependencies": {
    "@hono/vite-dev-server": "0.12.0",
    "@playwright/test": "1.43.1",
    "@remix-run/dev": "2.9.1",
    "@technifit/eslint-config": "*",
    "@technifit/tailwind-config": "*",
    "@technifit/tsconfig": "*",
    "@types/lodash": "4.17.0",
    "@types/node": "20.12.7",
    "@types/react": "18.3.1",
    "@types/react-dom": "18.3.0",
    "@vitest/coverage-v8": "1.5.3",
    "autoprefixer": "10.4.19",
    "dotenv-cli": "7.4.1",
    "esbuild": "0.20.2",
    "npm-run-all2": "6.1.2",
    "postcss": "8.4.38",
    "remix-development-tools": "4.1.4",
    "remix-flat-routes": "0.6.4",
    "tailwindcss": "3.4.3",
    "tsx": "4.8.2",
    "typescript": "5.4.5",
    "typescript-remix-routes-plugin": "1.0.1",
    "vite": "5.2.10",
    "vite-tsconfig-paths": "4.3.2",
    "vitest": "1.5.3"
  },
  "packageManager": "pnpm@8.15.7",
  "engines": {
    "node": ">=20.12.2"
  }
}
