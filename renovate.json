{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": true,
  "automergeSchedule": ["at any time"],
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchPackagePatterns": ["^@technifit/"],
      "enabled": false
    }
  ],
  "updateInternalDeps": true,
  "rangeStrategy": "bump",
  "vulnerabilityAlerts": {
    "enabled": true
  }
}
